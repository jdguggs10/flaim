# FLAIM Frontend Environment Variables
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# ===========================================
# OpenAI API (Required)
# ===========================================
OPENAI_API_KEY=sk-...

# ===========================================
# Clerk Authentication (Required)
# ===========================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Optional Clerk URL configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ===========================================
# Worker URLs (Local Development)
# ===========================================
# These point to local wrangler dev servers
# Run 'npm run dev' from the project root to start all services
NEXT_PUBLIC_AUTH_WORKER_URL=http://localhost:8786
NEXT_PUBLIC_BASEBALL_ESPN_MCP_URL=http://localhost:8787
NEXT_PUBLIC_FOOTBALL_ESPN_MCP_URL=http://localhost:8788

# ===========================================
# Environment Configuration
# ===========================================
ENVIRONMENT=dev
NODE_ENV=development
