{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    "src/**/*",
    "../../auth/espn/types.ts",
    "../../auth/espn/storage.ts", 
    "../../auth/espn/mcp-integration.ts",
    "../../auth/shared/encryption.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}