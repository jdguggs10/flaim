{
  "name": "auth-worker",
  "version": "1.0.0",
  "description": "Platform-agnostic credential storage worker for Flaim",
  "engines": {
    "node": "24.x"
  },
  "main": "./src/index.ts",
  "scripts": {
    "dev": "WRANGLER_LOG_PATH=../../.wrangler/logs WRANGLER_REGISTRY_PATH=../../.wrangler/registry wrangler dev --port 8786",
