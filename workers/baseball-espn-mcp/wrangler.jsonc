{
  "name": "baseball-espn-mcp",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-01",
  // Enable Cloudflare Workers Logs/Observability
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1,
    "logs": {
      "enabled": true,
      "head_sampling_rate": 1,
      "persist": true,
      "invocation_logs": true
    },
    "traces": {
      "enabled": false,
      "persist": true,
      "head_sampling_rate": 1
    }
  },
  // Environment configurations
  "env": {
    // Production environment
    "prod": {
      "name": "baseball-espn-mcp",
      "workers_dev": true,
      // Custom domain routes for production
      "routes": [
        {
          "pattern": "api.flaim.app/baseball/*",
          "zone_name": "flaim.app"
        }
      ],
      // Service binding for auth-worker (avoids same-zone fetch error 1042)
      "services": [
        { "binding": "AUTH_WORKER", "service": "auth-worker" }
      ],
      // Environment variables for production
      // Note: AUTH_WORKER_URL kept as fallback if service binding is unavailable.
      "vars": {
        "NODE_ENV": "production",
        "ENVIRONMENT": "prod",
        "AUTH_WORKER_URL": "https://auth-worker.gerrygugger.workers.dev"
      }
    },
    // Preview environment (remote dev/staging)
    "preview": {
      "name": "baseball-espn-mcp-preview",
      "workers_dev": true, // Use workers.dev URL for preview
      // Service binding for auth-worker
      "services": [
        { "binding": "AUTH_WORKER", "service": "auth-worker-preview" }
      ],
      // Environment variables for preview
      "vars": {
        "NODE_ENV": "production",
        "ENVIRONMENT": "preview",
        "AUTH_WORKER_URL": "https://auth-worker-preview.gerrygugger.workers.dev"
      }
    },
    // Development environment (local)
    "dev": {
      "name": "baseball-espn-mcp-dev",
      "workers_dev": true, // Use workers.dev URL for development
      // Service binding for auth-worker (uses URL fallback if binding unavailable locally)
      "services": [
        { "binding": "AUTH_WORKER", "service": "auth-worker-dev" }
      ],
      // Environment variables for dev
      "vars": {
        "NODE_ENV": "development",
        "ENVIRONMENT": "dev",
        "AUTH_WORKER_URL": "https://auth-worker-dev.gerrygugger.workers.dev"
      }
    }
  }
}